package top.flyfire.degetation.net;

import java.io.IOException;
import java.io.InputStream;

import top.flyfire.degetation.Const;
import top.flyfire.degetation.stream.Stream.Task;

public class NetStream implements Const{
	public static void run(InputStream ins,Task task){
		byte[] by = new byte[BUFFER_SIZE];
		try {
			for(int len = ins.read(by);len>0;len = ins.read(by)){
				CONSOLE.info(by);
				task.exec(by, len);
			}
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			throw new RuntimeException(e);
		}
	}
	
	public interface Task{
		void exec(byte[] by ,int len)throws IOException;
	}
}
