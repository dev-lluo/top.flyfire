package top.flyfire.degetation;

public class Loop {
	public interface Task<T>{
		int BREAK = -1;
		int NEXT = 0;
		int CONTINUE = 1;
		void run(T t, int index);
		int needNext(T t,int index);
	}
	public static <T> void run(final T[] target,final Task<T> task){
		Go.to(Validator.Obj.notNull(target)&&Validator.Obj.notNull(task), new Go.Task() {
			
			@Override
			public void run() {
				// TODO Auto-generated method stub
				for(int i = 0, flag=Task.BREAK;i<target.length;i++){
					flag=task.needNext(target[i], i);
					if(flag==Task.NEXT){
						task.run(target[i], i);
					}else if(flag==Task.CONTINUE){
						continue;
					}else if(flag==Task.BREAK){
						break;
					}
				}
			}
		});
	}
}
